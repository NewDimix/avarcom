.users-form
    background-color #E7EBF1
    font-size 14px
    padding 16px 30px
    text-align right

    &__filter
        {ibm}
        float left
        border 1px solid #EEEEEE
        font-size 0
        overflow hidden
        border-radius 8px

        button
            background-color white
            border none
            height 40px
            font-size 14px
            padding-left 20px
            padding-right 20px
            cursor pointer

            &:not(:last-child)
                border-right 1px solid #EEEEEE

            &:focus
                outline none

            &.active
                background-color #B0B2B5
                color white

    &__city
        {ibm}
        color black
        margin-right 21px

        span
            margin-right 10px

        select
            height 40px
            padding-left 10px
            font-family Roboto
            border none
            border-radius 5px
            cursor pointer

            &:focus
                outline none

    &__search
        {ibm}
        font-size 0

        input
            {ibm}
            height 40px
            font-size 14px
            border-top-left-radius 5px
            border-bottom-left-radius 5px
            border none
            padding-left 10px
            padding-right 10px
            width 320px
            border 1px solid white

            &:focus
                outline none
                border 1px solid #6FCF97

        button
            {ibt}
            height 40px
            font-size 14px
            background-color #6FCF97
            border none
            border-top-right-radius 5px
            border-bottom-right-radius 5px
            color white
            width 76px
            font-family Roboto


