.remodal
    background white
    color black
    padding 0
    padding-bottom 14px
    width 470px

    &_map
        width 608px
        padding-bottom 0

    &_decor
        width 900px
        max-width 1200px

    &_message
        width 730px

        .remodal__info
            li
                width 25%

    &__header
        font-size 18px
        text-transform uppercase
        line-height 58px
        text-align left
        border-bottom 1px solid #EEEEEE
        padding-left 17px
        padding-right 17px
        font-weight 700

    &__info
        background-color #EEEEEE
        padding-top 20px
        padding-bottom 20px

        ul
            padding-left 0
            list-style none
            font-size 0
            text-align left

        li
            {ibm}
            font-size 14px
            width 20%
            padding-left 20px
            padding-right 20px

    &__map
        height 500px
        position relative

        iframe
            width 100%
            height 500px

    &__form
        margin-top 30px

    &__edit
        position absolute
        left 50%
        transform translateX(-50%)
        bottom 20px
        display block
        font-size 14px
        color white
        border-radius 3px
        height 53px
        background-color #6FCF97
        border none
        width 186px
        margin-left auto
        margin-right auto
        cursor pointer

        &:focus
            outline none

    .remodal-close
        left inherit
        right 0
        top 10px

        &:hover
            color #505050

.remodal-wrapper
    left 260px
    top 80px

.remodal-overlay
    background-color rgba(0, 0, 0, 0.5)
    left 260px
    top 80px
