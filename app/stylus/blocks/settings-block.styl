.settings-block
    &__profile
        background-image url('../img/profile-bg.jpg')
        background-size cover
        background-repeat no-repeat
        background-position center
        padding 58px 40px
        margin-bottom 55px
        position relative

    &__bg
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        background-color rgba(0, 0, 0, 0.35)

    &__photo
        {ibm}
        margin-right 20px
        position relative

        img
            border-radius 50%

    &__user
        {ibm}
        margin-right 6px
        position relative

    &__name
        color white
        font-size 30px
        font-weight 700
        margin-bottom 10px

    &__post
        color black
        font-size 18px
        background-color #F2C94C
        padding 5px 10px
        border-radius 3px

    &__edit
        {ibb}
        font-size 13px
        color white
        margin-bottom 15px
        position relative

    &__table
        display none
