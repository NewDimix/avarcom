.main
    position relative
    background-color white
    font-size-func(20)

    &__content
        margin-top 30vh

    &__title
        text-align center
        margin-bottom 60px

        h1
            text-transform uppercase
            font-size 48px
            color black
            margin-top 0
            margin-bottom 0
            border 9px solid black
            {ibt}
            padding 5px 10px

    &__form
        width 360px
        margin-left auto
        margin-right auto

        input
            display block
            background none
            border none
            border-bottom 2px solid black
            width 100%
            font-size 24px
            color black
            padding-top 12px
            padding-bottom 12px
            transition all .2s ease

            &::-webkit-input-placeholder
                transition all .2s ease
                color black

            &::-moz-placeholder
                transition all .2s ease
                color black

            &:-ms-input-placeholder
                transition all .2s ease
                color black

            &:-moz-placeholder
                transition all .2s ease
                color black

            &:not(:last-child)
                margin-bottom 27px

            &:focus
                outline none

                &::-webkit-input-placeholder
                    color rgba(0, 0, 0, 0.3)

                &::-moz-placeholder
                    color #575757

                &:-ms-input-placeholder
                    color #575757

                &:-moz-placeholder
                    color #575757

        input[type=submit]
            height 50px
            width 130px
            border-radius 25px
            border 2px solid black
            margin-left auto
            font-size 18px
            cursor pointer

            &:hover
                background-color black
                color white

    &__nav-left
        position fixed
        top 0
        bottom 0
        left 0
        height 100%
        width 260px
        text-align center
        overflow-y auto
