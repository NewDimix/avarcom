.header
    position relative
    text-align center
    padding-top 20px
    padding-bottom 20px

    @media (min-width 480px)
        padding-top 30px
        padding-bottom 25px

    @media (min-width 768px)
        padding-top 40px
        padding-bottom 35px

    @media (min-width 992px)
        padding-top 50px
        padding-bottom 40px

    &__photo
        display inline-block
        width 200px
        height 200px
        border-radius 50%
        box-shadow 0 0 0 5px #404040, 0 0 0 6px #6f6f6f
        margin-bottom 45px

        img
            border-radius 50%

    &__text
        font-size 24px
        margin-bottom 35px
        font-weight 300

        h1
            font-weight inherit
            font-size inherit
            margin-top 0
            margin-bottom 0
