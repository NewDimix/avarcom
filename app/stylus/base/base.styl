html
    box-sizing border-box
    font-size 10px

*, *:before, *:after
    box-sizing inherit

body
    min-width 1200px
    font-family Roboto
    font-weight 400
    font-style normal
    line-height normal
    color white
    min-height auto
    min-height auto

    &.body_one-page
        display flex
        flex-direction column

        .main
            flex 1 0 auto

        .footer
            flex 0 0 auto

.container
    position relative
    max-width 1130px
    padding-left 10px
    padding-right 10px
    margin-left auto
    margin-right auto

p
    margin-top 0
    margin-bottom 20px

    &:last-child
        margin-bottom 0

